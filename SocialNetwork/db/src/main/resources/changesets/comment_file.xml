<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog">
    <changeSet id="createTable comment_file" author="Andrey Glushko">
        <createTable tableName="comment_file">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="comment_file_pkey"/>
